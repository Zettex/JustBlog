@model IList<JustBlog.Core.Objects.Tag>

<!-- Widget to display tags in sidebar -->
<div class="widget widget_tags">
    <h3>Post Tags.</h3>

    @if (Model.Count > 0)
    {
        <div class="tagcloud group">
            @foreach (var tag in Model)
            {
                @Html.TagLink(tag)
            }
        </div>
    }
    else
    {
        <p>No tags found!</p>
    }
</div>